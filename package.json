{
  "name": "event-management-platform",
  "version": "1.0.0",
  "description": "Event Management Platform - Microservices Architecture on AWS",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:security": "jest --testPathPattern=tests/security",
    "test:contract": "jest --testPathPattern=tests/contract",
    "test:ci": "jest --ci --coverage --watchAll=false --verbose",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "cdk": "cdk",
    "cdk:diff": "cdk diff",
    "cdk:deploy": "cdk deploy --all",
    "cdk:destroy": "cdk destroy --all",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.cache",
    "dev:setup": "npm run clean && npm install && npm run build"
  },
  "keywords": [
    "event-management",
    "microservices",
    "aws",
    "cdk",
    "typescript",
    "serverless"
  ],
  "author": "Event Management Team",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.10",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "aws-cdk": "^2.100.0",
    "aws-cdk-lib": "^2.100.0",
    "aws-sdk-client-mock": "^3.0.1",
    "constructs": "^10.3.0",
    "eslint": "^8.52.0",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-mock-extended": "^3.0.5",
    "nock": "^13.3.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.15.0",
    "@aws-lambda-powertools/tracer": "^1.15.0",
    "@aws-sdk/client-cloudwatch": "^3.873.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.450.0",
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-eventbridge": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/client-ses": "^3.450.0",
    "@aws-sdk/client-sns": "^3.450.0",
    "@aws-sdk/client-sqs": "^3.450.0",
    "@aws-sdk/client-ssm": "^3.873.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "aws-lambda": "^1.0.7",
    "aws-xray-sdk-core": "^3.5.4",
    "bcryptjs": "^3.0.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^14.5.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
